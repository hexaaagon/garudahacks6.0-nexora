{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "envMode": "loose",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env.local"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env.local"],
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },

    "db:generate": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"],
      "cache": false
    }
  }
}
