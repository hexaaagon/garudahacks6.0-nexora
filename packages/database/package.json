{
  "name": "@nexora/database",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./drizzle/schema/auth": {
      "types": "./src/drizzle/schema/auth.ts",
      "import": "./src/drizzle/schema/auth.ts",
      "default": "./src/drizzle/schema/auth.ts"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow bun",
    "db:generate": "bun run db:generate:auth && bun run db:generate:migrations",
    "db:generate:auth": "bunx @better-auth/cli@latest generate --config ../../apps/frontend/src/lib/auth/index.ts --output ./src/drizzle/schema/auth.ts -y",
    "db:generate:migrations": "drizzle-kit generate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-auth": "^1.3.3",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.7"
  }
}
